			if ($res) {
				//drupal_set_message('res ok');
				if ($data = db_fetch_object($res)) {
					////drupal_set_message('rek . '  . $data->kodero);
					if ($data->kodero=='') 
						form_set_error('', 'Rekening yang dimasukkan diluar obyek rekening berkenaan');
				} else 
