function apbdkegrekeningrevisi_menu() {
    $items['apbdkegrekeningrevisi'] = array(
        'title' => 'Rekening Kegiatan',
        'page callback' => 'drupal_get_form',
        'page arguments' => array('apbdkegrekeningrevisi_form'),
